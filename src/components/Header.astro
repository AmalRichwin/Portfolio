---
import Navigation from './Navigation.astro';
import DarkModeToggle from '@/components/DarkModeToggle';
import { GITHUB_PROFILE, TWITTER_PROFILE, LINKEDIN_PROFILE } from '@/config';
import GithubIcon from './icons/GithubIcon';
import TwitterIcon from './icons/TwitterIcon';
import LinkedinIcon from './icons/LinkedinIcon';
---

<header class='md:backdrop-blur-sm z-50 sticky top-0'>
    <a
        class='unset absolute z-10 left-[50%] -top-[100rem] translate-x-[-50%] bg-white text-black px-8 py-2 focus:top-[initial]'
        href='#main'>
        Skip to content
    </a>
    <Navigation />
    <div class='justify-self-end py-2 px-2 flex items-center content-center text-text-bold'>
        <a
            class='unset ml-4 rounded-sm'
            target='_blank'
            aria-label='Amal Richwin on Github'
            href={GITHUB_PROFILE}>
            <GithubIcon
                width={15}
                height={15}
                className='text-gray-800 hover:text-black dark:text-white dark:bg-none dark:hover:text-primary-yellow'
                title='Amal Richwin on GitHub'
            />
        </a>
        <a
            class='unset ml-4 rounded-sm'
            target='_blank'
            href={LINKEDIN_PROFILE}
            aria-label='Amal Richwin on Linkedin'>
            <LinkedinIcon
                width={15}
                height={15}
                title='Amal Richwin on Linkedin'
                className='transition-[background-size] duration-150 bg-left-bottom bg-[length:0%_55%] bg-no-repeat bg-gradient-to-r from-primary-blue to-primary-blue dark:bg-none dark:hover:text-primary-blue'
                />
            </a>
        <a
            class='unset ml-4 rounded-sm'
            target='_blank'
            href={TWITTER_PROFILE}
            aria-label='Amal Richwin on Twitter'>
            <TwitterIcon 
            width={15}
            height={15}
            className='transition-[background-size] duration-150 bg-left-bottom bg-[length:0%_55%] bg-no-repeat bg-gradient-to-r from-primary-blue to-primary-blue dark:bg-none dark:hover:text-primary-blue'
            title='Amal Richwin on Twitter'
            />
        </a>
    </div>
    <DarkModeToggle client:load/>
</header>
<style>
    header {
        grid-area: header;
        display: grid;
        align-items: center;
        grid-template-columns: minmax(0, 1fr) minmax(0, max-content) minmax(0, max-content);
    }
</style>